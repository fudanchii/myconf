[ui]
username = Nurahmadie <nurahmadie@gmail.com>
verbose = true
ignore = ~/.hgignore

[extensions]
rebase =
mq =
churn =
graphlog =
color =
pager =
purge =
record =
histedit =

[bookmarks]
track.current = True

[hostfingerprints]
bitbucket.org = 24:9c:45:8b:9c:aa:ba:55:4e:01:6d:58:ff:e4:28:7d:2a:14:ae:3b

[pager]
pager = LESS=FRX less
attend = lp, diff

[alias]
st = status
up = update
co = update
cl = clone
ci = commit
pl = pull
ps = push
rb = rebase
br = branch
bs = branches
bm = bookmark
bms = bookmarks
bk = bookmark
bks = bookmarks
logp = log --graph --template '{rev}:{node|short}:{branches} {tags} {bookmarks}\n[{phase}] {author|emailuser}: {desc|firstline|fill68}\n\n'
lp = logp
untrack = rm -Af
utr = untrack

[tortoisehg]
editor = gvim
